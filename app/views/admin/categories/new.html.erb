<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>New category</h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<section class="content">
  <div class="container-fluid">
    <div class="card">
      <!-- /.card-header -->
      <%= form_for @category, url: admin_categories_path, method: :post do |f| %>
        <div class="card-body">
          <div class="form-group has-error">
            <label>Name</label>
            <%= f.text_field :name, class: "form-control #{ 'is-invalid' if @category.errors.messages[:name].first.present? }" %>

            <% if @category.errors.messages[:name].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @category.errors.messages[:name].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Parent category</label>
            <%= f.select(:parent_id, options_for_select(category_options_array(@categories)), { include_blank: "&nbsp;".html_safe }, class: 'form-control') %>
          </div>
          <div class="form-group">
            <label>Public</label>
            <div>
              <%= f.radio_button("is_public", "true") %>
              <%= label :is_public, 'True' %>
            </div>
            <div>
              <%= f.radio_button("is_public", "false", checked: true) %>
              <%= label :is_public, 'False' %>
            </div>
          </div>
          <div class="form-group">
            <label>Select</label>
            <div>
              <%= f.radio_button("is_selected", "true") %>
              <%= label :is_selected, 'True' %>
            </div>
            <div>
              <%= f.radio_button("is_selected", "false", checked: true) %>
              <%= label :is_selected, 'False' %>
            </div>
          </div>
        <!-- /.card-body -->
          <div style='text-align: right;'>
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <!-- /.card-body -->
    </div>
  </div>
</section>