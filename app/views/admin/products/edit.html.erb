<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Edit product</h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<section class="content">
  <div class="container-fluid">
    <div class="card">
      <!-- /.card-header -->
      <%= form_for @product, url: admin_product_path, method: :put do |f| %>
        <div class="card-body">
          <div class="form-group has-error">
            <label>Name</label>
            <%= f.text_field :name, class: "form-control #{ 'is-invalid' if @product.errors.messages[:name].first.present? }" %>

            <% if @product.errors.messages[:name].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:name].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Card Image</label>
            <%= f.file_field :card_image, style: 'height: 44px;', class: "form-control #{ 'is-invalid' if @product.errors.messages[:card_image].first.present? }" %>

            <% if @product.errors.messages[:card_image].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:card_image].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Images</label>
            <%= f.file_field :product_images_file_data, multiple: true, class: 'form-control', style: 'height: 44px;' %>
          </div>
          <div class="form-group has-error">
            <label>Category</label>
            <%= f.select(:category_ids, options_for_select(category_options_array(@categories), f.object.categories.pluck(:id)), {}, class: 'form-control', multiple: true, size: 10) %>
          </div>
          <div class="form-group has-error">
            <label>Public</label>
            <div>
              <%= f.radio_button("is_public", "true") %>
              <%= label :is_public, 'True' %>
            </div>
            <div>
              <%= f.radio_button("is_public", "false") %>
              <%= label :is_public, 'False' %>
            </div>
          </div>
          <div class="form-group has-error">
            <label>Price</label>
            <%= f.number_field :price, class: "form-control #{ 'is-invalid' if @product.errors.messages[:price].first.present? }" %>

            <% if @product.errors.messages[:price].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:price].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Amount</label>
            <%= f.number_field :amount, class: "form-control #{ 'is-invalid' if @product.errors.messages[:amount].first.present? }" %>

            <% if @product.errors.messages[:amount].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:amount].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Color</label>
            <%= f.text_field :color, class: "form-control #{ 'is-invalid' if @product.errors.messages[:color].first.present? }" %>

            <% if @product.errors.messages[:color].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:color].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Material</label>
            <%= f.text_field :material, class: "form-control #{ 'is-invalid' if @product.errors.messages[:material].first.present? }" %>

            <% if @product.errors.messages[:material].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:material].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Dimension X</label>
            <%= f.number_field :dimension_x, class: "form-control #{ 'is-invalid' if @product.errors.messages[:dimension_x].first.present? }" %>

            <% if @product.errors.messages[:dimension_x].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:dimension_x].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Dimension Y</label>
            <%= f.number_field :dimension_y, class: "form-control #{ 'is-invalid' if @product.errors.messages[:dimension_y].first.present? }" %>

            <% if @product.errors.messages[:dimension_y].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:dimension_y].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Dimension Z</label>
            <%= f.number_field :dimension_z, class: "form-control #{ 'is-invalid' if @product.errors.messages[:dimension_z].first.present? }" %>

            <% if @product.errors.messages[:dimension_z].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:dimension_z].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Description</label>
            <%= f.text_area :description, class: "form-control #{ 'is-invalid' if @product.errors.messages[:description].first.present? }" %>

            <% if @product.errors.messages[:description].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @product.errors.messages[:description].first %></p>
            <% end %>
          </div>
        <!-- /.card-body -->
          <div style='text-align: right;'>
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <!-- /.card-body -->
    </div>
  </div>
</section>