<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>New banner</h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<section class="content">
  <div class="container-fluid">
    <div class="card">
      <!-- /.card-header -->
      <%= form_for @banner, url: admin_banners_path, method: :post do |f| %>
        <div class="card-body">
          <div class="form-group has-error">
            <label>Name</label>
            <%= f.text_field :name, class: "form-control #{ 'is-invalid' if @banner.errors.messages[:name].first.present? }" %>

            <% if @banner.errors.messages[:name].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @banner.errors.messages[:name].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Image</label>
            <%= f.file_field :image, style: 'height: 44px;', class: "form-control #{ 'is-invalid' if @banner.errors.messages[:image].first.present? }" %>

            <% if @banner.errors.messages[:image].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @banner.errors.messages[:image].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Url</label>
            <%= f.text_field :url, type: 'url', class: "form-control #{ 'is-invalid' if @banner.errors.messages[:url].first.present? }" %>

            <% if @banner.errors.messages[:url].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @banner.errors.messages[:url].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Sort order</label>
            <%= f.number_field :sort_order, class: 'form-control' %>
          </div>
          <div class="form-group has-error">
            <label>Public</label>
            <div>
              <%= f.radio_button("is_public", "true") %>
              <%= label :is_public, 'True' %>
            </div>
            <div>
              <%= f.radio_button("is_public", "false", checked: true) %>
              <%= label :is_public, 'False' %>
            </div>
          </div>
        <!-- /.card-body -->
          <div style='text-align: right;'>
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <!-- /.card-body -->
    </div>
  </div>
</section>