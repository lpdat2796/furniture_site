<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>New user</h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<section class="content">
  <div class="container-fluid">
    <div class="card">
      <!-- /.card-header -->
      <%= form_for @user, url: admin_users_path, method: :post do |f| %>
        <%= f.hidden_field :role, value: 'user' %>
        <div class="card-body">
          <div class="form-group has-error">
            <label>Email</label>
            <%= f.email_field :email, class: "form-control #{ 'is-invalid' if @user.errors.messages[:email].first.present? }" %>

            <% if @user.errors.messages[:email].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @user.errors.messages[:email].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Password</label>
            <%= f.password_field :password, class: "form-control #{ 'is-invalid' if @user.errors.messages[:password].first.present? }" %>

            <% if @user.errors.messages[:password].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @user.errors.messages[:password].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Full name</label>
            <%= f.text_field :full_name, class: "form-control #{ 'is-invalid' if @user.errors.messages[:full_name].first.present? }" %>

            <% if @user.errors.messages[:full_name].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @user.errors.messages[:full_name].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Address</label>
            <%= f.text_field :address, class: "form-control #{ 'is-invalid' if @user.errors.messages[:address].first.present? }" %>

            <% if @user.errors.messages[:address].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @user.errors.messages[:address].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Phone</label>
            <%= f.text_field :phone, class: "form-control #{ 'is-invalid' if @user.errors.messages[:phone].first.present? }" %>

            <% if @user.errors.messages[:phone].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @user.errors.messages[:phone].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Age</label>
            <%= f.number_field :age, class: "form-control #{ 'is-invalid' if @user.errors.messages[:age].first.present? }" %>

            <% if @user.errors.messages[:age].first.present? %>
              <p class="invalid-feedback"><i class="fa fa-warning"></i> <%= @user.errors.messages[:age].first %></p>
            <% end %>
          </div>
          <div class="form-group has-error">
            <label>Gender</label>
            <div>
              <%= f.radio_button("gender", "male", checked: true) %>
              <%= label :gender, 'Male' %>
            </div>
            <div>
              <%= f.radio_button("gender", "female") %>
              <%= label :gender, 'Female' %>
            </div>
            <div>
              <%= f.radio_button("gender", "other") %>
              <%= label :gender, 'Other' %>
            </div>
          </div>
          <div style='text-align: right;'>
            <%= f.submit 'Submit', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <!-- /.card-body -->
    </div>
  </div>
</section>