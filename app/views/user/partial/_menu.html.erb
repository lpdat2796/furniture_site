<section class="menu">
	<nav class="navbar navigation">
		<div class="container">
			<div class="navbar-header">
				<h2 class="menu-title">Main Menu</h2>
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
					aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

			</div><!-- / .navbar-header -->

			<!-- Navbar Links -->
			<div id="navbar" class="navbar-collapse collapse text-center">
				<ul class="nav navbar-nav">
					<% @parent_categories.each do |parent_category| %>
						<li class="dropdown full-width dropdown-slide">
							<a href="#!" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="350"
								role="button" aria-haspopup="true" aria-expanded="false"><%= parent_category.name %> <span
									class="tf-ion-ios-arrow-down"></span></a>
							<div class="dropdown-menu">
								<div class="row">
									<% Category.where(parent_id: parent_category.id, is_public: true).limit(4).offset(0).each do |child_category| %>
										<div class="col-sm-3 col-xs-12">
											<ul>
												<li class="dropdown-header"><%= child_category.name %></li>
												<li role="separator" class="divider"></li>
												<% Category.where(parent_id: "#{ parent_category.id },#{ child_category.id }", is_public: true).each do |category| %>
													<li><a href="<%= user_categories_path(id: category.id) %>"><%= category.name %></a></li>
												<% end %>
											</ul>
										</div>
									<% end %>
								</div>
								<div class="row mt-10">
									<% Category.where(parent_id: parent_category.id, is_public: true).limit(4).offset(4).each do |child_category| %>
										<div class="col-sm-3 col-xs-12">
											<ul>
												<li class="dropdown-header"><%= child_category.name %></li>
												<li role="separator" class="divider"></li>
												<% Category.where(parent_id: "#{ parent_category.id },#{ child_category.id }", is_public: true).each do |category| %>
													<li><a href="<%= user_categories_path(id: category.id) %>"><%= category.name %></a></li>
												<% end %>
											</ul>
										</div>
									<% end %>
								</div>
							</div><!-- / .dropdown-menu -->
						</li>
					<% end %>
				</ul><!-- / .nav .navbar-nav -->

			</div>
			<!--/.navbar-collapse -->
		</div><!-- / .container -->
	</nav>
</section>