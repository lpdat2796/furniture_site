<section class="top-header">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-xs-12 col-sm-4">
				<div class="contact-number">
					<i class="tf-ion-ios-telephone"></i>
					<span>0129- 12323-123123</span>
				</div>
			</div>
			<div class="col-md-4 col-xs-12 col-sm-4">
				<!-- Site Logo -->
				<div class="logo text-center">
					<a href="<%= user_root_path %>">
						<!-- replace logo here -->
						<svg width="135px" height="29px" viewBox="0 0 155 29" version="1.1" xmlns="http://www.w3.org/2000/svg"
							xmlns:xlink="http://www.w3.org/1999/xlink">
							<g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" font-size="40"
								font-family="AustinBold, Austin" font-weight="bold">
								<g id="Group" transform="translate(-108.000000, -297.000000)" fill="#000000">
									<text id="AVIATO">
										<tspan x="108.94" y="325">AVIATO</tspan>
									</text>
								</g>
							</g>
						</svg>
					</a>
				</div>
			</div>
			<div class="col-md-4 col-xs-12 col-sm-4">
				<!-- Cart -->
				<ul class="top-menu text-right list-inline">
					<% if current_user.present?  %>
						<li class="dropdown cart-nav dropdown-slide">
							<a href="<%= user_orders_path %>" class="dropdown-toggle" data-hover="dropdown">
							<i class="tf-ion-android-cart" id='link-dropdown-cart'></i>Cart
							<% if @order_details.count > 0 %>
								<span class="badge badge-warning navbar-badge" id='header-item-amount'><%= @order_details.pluck(:amount).inject { |sum, element| sum + element } %></span>
							<% end %>
							</a>
						</li><!-- / Cart -->
					<% end %>

					<!-- Search -->
					<li class="dropdown search dropdown-slide">
						<a href="#!" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown"><i
								class="tf-ion-ios-search-strong"></i> Search</a>
						<ul class="dropdown-menu search-dropdown">
							<li>
								<form action="post"><input type="search" class="form-control" placeholder="Search..."></form>
							</li>
						</ul>
					</li><!-- / Search -->

					<% if current_user %>
						<li class="dropdown dropdown-slide">
							<a class="nav-link" data-toggle="dropdown" href="#" aria-expanded="false">
								<span class="text-sm"><i class="far fa-user"></i><%= current_user.full_name %></span>
							</a>
							<div class="dropdown-menu cart-dropdown">
								<div class="media">
									<%= link_to profile_user_accounts_path, class: 'dropdown-item' do %>
										<span class="text-sm"><i class="fas fa-lock mr-2"></i>Change profile</span>
									<% end %>
								</div>
								<div class="dropdown-divider"></div>
								<div class="media">
									<%= link_to user_logout_path, method: :delete, class: 'dropdown-item' do %>
										<span class="text-sm"><i class="fas fa-sign-out-alt mr-2"></i>Logout</span>
									<% end %>
								</div>
							</div>
						</li>
					<% else %>
						<li class='dropdown' style='cursor: pointer;'>
							<span data-toggle="modal" data-target="#login-modal">
								Login
							</span>
						</li>
					<% end %>

				</ul><!-- / .nav .navbar-nav .navbar-right -->
			</div>
		</div>
	</div>
</section>